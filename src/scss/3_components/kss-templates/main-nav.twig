{#          {% for child in expanded %}#}
{#            <li class="menu-item">#}
{#              {% if child.url %}#}
{#                <a href="{{ child.url }}">{{ child.text }}</a>#}
{#              {% else %}#}
{#                {{ child.text }}#}
{#              {% endif %}#}
{#            </li>#}
{#          {% endfor %}#}
{#        </ul>#}
      </li>
    {% else %}
      <li class="menu-item">
        <a href="#">Navigation item 4</a>
      </li>
    {% endif %}
    </ul>
  </nav>
</div>
